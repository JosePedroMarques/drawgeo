<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="@drawable/mainmenu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingTop="5dp" android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView1"
            android:layout_below="@+id/imageView1"
            android:paddingTop="2dp"
            android:text="Tiago Babo"
            android:textColor="#ffffff" />

    </RelativeLayout>

	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp" android:gravity="center_horizontal">

	    <ImageView
	        android:id="@+id/challengesdone"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/challendesdone" />

	    <ImageView
	        android:id="@+id/challengescreated"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@+id/challengesdone"
	        android:paddingLeft="10dp"
	        android:src="@drawable/challengescreated" />

	    <ImageView
	        android:id="@+id/guessedyours"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@+id/challengescreated"
	        android:paddingLeft="10dp"
	        android:src="@drawable/guessedyours" />

	    <TextView
	        android:id="@+id/guessedyourstext"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_alignRight="@+id/guessedyours"
	        android:gravity="center_horizontal"
	        android:paddingTop="2dp"
	        android:text="10"
	        android:textColor="#ffffff"
	        android:textSize="10pt"
	        android:width="99px" />

	    <TextView
	        android:id="@+id/chanllengesdonetext"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_toLeftOf="@+id/challengescreated"
	        android:gravity="center_horizontal"
	        android:paddingTop="2dp"
	        android:text="123"
	        android:textColor="#ffffff"
	        android:textSize="10pt"
	        android:width="99px" />

	    <TextView
	        android:id="@+id/chanllengescreatedtext"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_toLeftOf="@+id/guessedyours"
	        android:gravity="center_horizontal"
	        android:paddingTop="2dp"
	        android:text="123"
	        android:textColor="#ffffff"
	        android:textSize="10pt"
	        android:width="99px" />

	    <ImageView
	        android:id="@+id/piggies"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@+id/guessedyours"
	        android:paddingLeft="10dp"
	        android:src="@drawable/piggies" />

	    <TextView
	        android:id="@+id/piggiestext"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_alignRight="@+id/piggies"
	        android:bufferType="normal"
	        android:gravity="center_horizontal"
	        android:paddingTop="6dp"
	        android:text="250"
	        android:textColor="#ffffff"
	        android:textSize="10pt"
	        android:width="99px" />

	</RelativeLayout>

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" android:layout_marginTop="20dp">

		<ImageView
		    android:id="@+id/btnPlay"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_centerHorizontal="true"
		    android:src="@drawable/playnow" />

		<ImageView
		    android:id="@+id/btnStore"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/btnPlay"
		    android:layout_below="@+id/btnPlay"
		    android:layout_marginTop="15dp"
		    android:src="@drawable/store" />

		<ImageView
		    android:id="@+id/btnOptions"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/btnStore"
		    android:layout_below="@+id/btnStore"
		    android:layout_marginTop="15dp"
		    android:src="@drawable/options" />

		<ImageView
		    android:id="@+id/btnAbout"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/btnOptions"
		    android:layout_below="@+id/btnOptions"
		    android:layout_marginTop="15dp"
		    android:src="@drawable/about" />

	</RelativeLayout>
	
	
	
	    

</LinearLayout>